{
  "name": "Privacy Bucket",
  "version": "1.0",
  "manifest_version": 2,
  "description": "See what the trackers know about you",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs",
    "*://*/*"
  ],
  "browser_action": {
    "default_icon": "icon.png", // optional
    "default_title": "Privacy Bucket",      // optional; shown in tooltip
    "default_popup": "popup.html"        // optional
  }
}